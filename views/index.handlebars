<h1>Burgers!</h1>

<h2>Burger Bucket List</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger_block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger_block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Already Devoured!<br>
    <input type="radio" name="devoured" value="0"> Add to Bucket List
  </div>

  <button type="submit">Add Burger</button>
</form>
